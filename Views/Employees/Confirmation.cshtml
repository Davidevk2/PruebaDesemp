@{
    ViewData["Title"]="Confirmation";
}
<div class="container mt-5">
    <div class=" small-card">
        <div class="text-center">
        <div class="card-body">
            <h2 class="card-title">Confirmation</h2>
            <p class="card-text">are you sure that you want to delete this item?</p>
            <p>@Model.Id</p>
        </div>
        <div class="card-footer">
            <a asp-controller="Employees" asp-action="Index"  class="btn btn-secondary">Cancel</a>
            <a asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>

        </div>
    </div>
</div>